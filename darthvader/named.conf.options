logging {
    channel query.log {
        file "/var/log/bind/queries.log";
        severity dynamic;
    };

	channel update.log {
        file "/var/log/bind/update.log";
        severity dynamic;
    };

    category queries { query.log; };
	category update { update.log; };
};


options {
	directory "/var/cache/bind";
